@model IEnumerable<WooMeal2.Models.Restaurant>

<div class="row">
    @foreach (var restaurant in Model)
    {
            <div class="col-sm-4">
                <div class="card" style="width: 18rem;">
                    <img height="100" width="150" src="@Url.Action("GetImage", "Home", new {id = restaurant.Uid})" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@restaurant.Name</h5>
                        <p class="card-text">@restaurant.Description</p>
                        <a href="Meal/MealSelection?uid=@restaurant.Uid" class="btn btn-primary">Innen rendelek!</a>
                    </div>
                </div>
            </div>
    }
</div>

