@model WooMeal2.Models.Restaurant

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RestaurantMaker" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" required />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinDeliverySum" class="control-label">Minimum credit for ordering</label>
                <input asp-for="MinDeliverySum" class="form-control" required min="1500" />
                <span asp-validation-for="MinDeliverySum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryCost" class="control-label">Cost of delivery</label>
                <input asp-for="DeliveryCost" class="form-control" required min="300" max="2000"/>
                <span asp-validation-for="DeliveryCost" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label>Picture</label>
                <input type="file" name="pictureData" />
            </div>

            <div class="form-group">
                <input type="submit" value="Kész!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
