@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User);

    <li class="nav-item">
            <a class="nav-link text-dark"> Credit: @currentUser.Credit</a>
    </li>
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Szia @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <li><a class="btn-link" asp-controller="Account" asp-action="Logout">Kijelentkezés</a></li>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Regisztráció</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Belépés</a>
    </li>
}
</ul>
